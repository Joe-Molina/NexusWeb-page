---
interface Props {
  titulo: string;
  texto: string;
}

const { titulo, texto } = Astro.props;
---

<div
  class="flex flex-col justify-center items-center bg-slate-500 bg-no-repeat bg-cover bg-gradient-to-tr"
  style="background-image: url('/heroimg1.png')"
>
  <p
    class="inline text-white lg:text-5xl text-3xl font-normal text-center mt-40 lg:mt-80 lg:font-bold"
  >
    {titulo}
  </p>
  <p
    class="inline text-zinc-300 text-sm font-normal text-center lg:mb-10 mb-16 px-2 mt-4 lg:text-sm"
  >
    {texto}
  </p>
</div>
